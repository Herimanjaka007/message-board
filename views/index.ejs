<%- include('partials/head.ejs')  %>
    <div class="container">
        <% messages.forEach(message=> { %>
            <div class="card mt-3 w-50 mx-auto">
                <div class="card-body">
                    <div class="card-title">
                        <h2>
                            <%= message.user %>
                        </h2>
                        <span class="text-muted">
                            <%= message.added %>
                        </span>
                    </div>
                    <div class="card-text">
                        <p>
                            <%= message.text %>
                        </p>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    
<%- include('partials/foot.ejs')  %>
